<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark pt-sm-4 px-sm-5">
        <div class="container-fluid flex-column flex-sm-row">
            <a href="/" class="navbar-brand"><strong><span class="text-info">Members</span>Only</strong></a>
            <ul class="navbar-nav">
                <% if (!locals.currentUser) { %>
                    <li class="nav-item px-3">
                        <a href="/sign-up" class="nav-link nav-custom">SIGN UP</a>
                    </li>
                    <li class="nav-item px-3">
                        <a href="/sign-in" class="nav-link nav-custom">SIGN IN</a>
                    </li>
                <% } else { %>
                    <li class="px-3 user-select-none">
                        <p class="navbar-text nav-custom mb-0 fw-bold">Status:
                            <% if (currentUser.membership === 'Unregistered') { %>
                                <span class="navbar-text nav-custom"><%= currentUser.membership %></span>
                            <% } else if (currentUser.membership === 'Member') { %>
                                <span class="navbar-text nav-custom text-info"><%= currentUser.membership %></span>
                            <% } else { %>
                                <span class="navbar-text nav-custom text-admin"><%= currentUser.membership %></span>
                            <% } %>
                        </p>
                    </li>
                    <li class="nav-item px-3">
                        <a href="/users/create-story" class="nav-link nav-custom">CREATE STORY</a>
                    </li>
                    <li class="nav-item px-3">
                        <a href="/users/upgrade-account" class="nav-link nav-custom">UPGRADE ACCOUNT</a>
                    </li>
                    <li class="nav-item px-3">
                        <a href="/users/log-out" class="nav-link nav-custom">LOG OUT</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header> 