<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="vh-100 d-flex flex-column">
    <%- include('../partials/nav'); %>
    <div class="container-fluid bg-dark flex-grow-1 p-5">
      <div class="container sm-display w-25 pt-sm-5 px-sm-4 text-light d-flex flex-column align-content-center">
        <h1>Upgrade account?</h1>
        <form action="/users/upgrade-account" method="post" class="form d-flex flex-column">
          <div class="form-group">
            <label for="code" class="form-label">Enter code to upgrade account:</label>
            <input type="text" class="form-control" name="code" />
          </div>
          <button type="submit" class="btn btn-primary mt-4">Submit</button>
          <% if (locals.errors) { %>
            <ul class="mt-3">
              <% locals.errors.forEach(error => { %>
                <li class="text-danger"><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>
        </form>
      </div>
    </div>
  </body>
</html>
