<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="vh-100 d-flex flex-column">
    <%- include('../partials/nav'); %>
    <div class="container-fluid bg-dark flex-grow-1 p-2 p-sm-5">
      <div class="container sm-display w-25 pt-sm-5 px-sm-4 text-light d-flex flex-column align-content-center">
        <h1>Create new account?</h1>
        <form action="/sign-up" method="post" class="form d-flex flex-column">
          <div class="form-group">
            <label for="email" class="form-label">Email address:</label>
            <input type="text" class="form-control" name="email" placeholder="Email" />
          </div>
          <div class="form-group">
            <label for="username" class="form-label">Desired username:</label>
            <input type="text" class="form-control" name="username" placeholder="Username" />
          </div>
          <div class="form-group">
            <label for="password" class="form-label">Password: <small>6 characters minimum</small></label>
            <input type="password" class="form-control" name="password" placeholder="Password" />
          </div>
          <div class="form-group">
            <label for="confirmPassword" class="form-label">Confirm password:</label>
            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" />
          </div>
          <button type="submit" class="btn btn-primary mt-4">Sign up</button>
          <% if (locals.errors) { %>
            <ul class="mt-3">
              <% locals.errors.forEach(error => { %>
                <li class="text-danger"><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>
        </form>
      </div>
    </div>
  </body>
</html>
