<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="vh-100 d-flex flex-column">
    <%- include('../partials/nav'); %>
    <div class="container-fluid bg-dark flex-grow-1 p-2 p-sm-5">
      <div class="container sm-display w-25 pt-sm-5 px-sm-4 text-light d-flex flex-column align-content-center">
        <h1>Create story</h1>
        <form action="/users/create-story" method="post" class="form d-flex flex-column">
          <div class="form-group">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" name="title" placeholder="*40 characters maximum" />
          </div>
          <div class="form-group">
            <label for="msg" class="form-label">Story:</label>
            <textarea class="form-control" name="msg" placeholder="*250 characters maximum, optional"></textarea>
          </div>
          <button type="submit" class="btn btn-primary mt-4">Submit</button>
          <% if (locals.errors) { %>
            <ul class="mt-3">
              <% locals.errors.forEach(error => { %>
                <li class="text-danger"><%= error.msg %></li>
              <% }) %>
            </ul>
          <% } %>
        </form>
      </div>
    </div>
  </body>
</html>
